@page "/PolicyTester"
<h1>Policy Tester</h1>

<h2>@Policy.SuccessPolicy</h2>
<AuthorizeView Policy="@Policy.SuccessPolicy">
    <Authorized>
        <p>Authorised (as expected)!</p>
    </Authorized>
    <NotAuthorized>
        <p>Not authorised. We shouldn't see this since since it's the success policy!</p>
    </NotAuthorized>
</AuthorizeView>

<h2>@Policy.FailurePolicy</h2>
<AuthorizeView Policy="@Policy.FailurePolicy">
    <Authorized>
        <p>Authorised. This is the failure policy though, so we shouldn't see this!</p>
    </Authorized>
    <NotAuthorized>
        <p>Not authorised (as expected)!</p>
    </NotAuthorized>
</AuthorizeView>
